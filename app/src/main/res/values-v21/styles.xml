<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ChampHeaderTextStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/champ_text_color</item>
    </style>

    <style name="AppTheme.ChampSubHeaderTextStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/champ_sub_text_color</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
